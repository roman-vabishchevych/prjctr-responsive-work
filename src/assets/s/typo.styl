@import '../../globals/variables'
a
	cursor pointer
	transition color 0.2s ease
	outline 0 none !important

ul
	padding 0
	margin 0 0 15px
	list-style none
	li
		margin 0 0 5px
		list-style none
		position relative
		&:before
			content "-"
			position absolute
			right 100%
			margin-right 3px

blockquote
	display block
	margin 0
	padding 110px 20px 60px
	border-width 1px 0
	border-color #d3d3d3
	border-style solid
	text-align center
	font-size 25px
	font-weight bold
	background url('i/blockquote.svg') no-repeat center 50px transparent
	>span
		display inline-block
		max-width 580px

p
	margin-top 10px
	margin-bottom 10px

h1, .h1
	font-size 45px
	line-height 54px
	letter-spacing -0.1pt
	margin 20px 0
	font-weight 400
	&.font-light
		letter-spacing 1pt
	small
		font-size 53%

h2, .h2
	font-size 35px
	margin 0 0 25px

h3, .h3
	font-size 22px
	margin 0 0 10px
