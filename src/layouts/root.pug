include ../../node_modules/bemto.pug/bemto
include ../blocks/index

-
	var asset = function(name) { return "/assets/" + name; };
	var site = {
		url: 'http://se7ensky.com/',
		name: 'TIR Manager',
		title: 'TIR Manager – Простой и удобный учет грузоперевозок',
		description: 'Экономьте ваше время каждый день. Сэкономленные пол часа в день освобождают вам полтора рабочих дня каждый месяц.',
		keywords: 'TIR Manager',
		author: 'TIR Manager',
		twitter: '@se7enskycom',
		socialImage: 'https://dl.dropboxusercontent.com/u/1879153/socials-pic2.png',
	}

doctype html
html(itemscope, itemtype="http://schema.org/Article")
	head
		title= site.name
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=1.0, minimum-scale=1.0, maximum-scale=1.0")
		link(rel="shortcut icon", href=asset("i/favicon.png"), type="image/png")
		meta(name="description", content="#{site.description}")
		meta(name="keywords", content="#{site.keywords}")
		meta(name="author", content="#{site.author}")

		// Schema.org markup for Google+
		meta(itemprop="name", content="#{site.title}")
		meta(itemprop="description", content="#{site.description}")
		meta(itemprop="image", content="#{site.socialImage}")

		// Twitter Card data
		meta(name="twitter:card", content="product")
		meta(name="twitter:site", content="#{site.twitter}")
		meta(name="twitter:title", content="#{site.title}")
		meta(name="twitter:description", content="#{site.description}")
		meta(name="twitter:creator", content="#{site.twitter}")
		meta(name="twitter:image", content="#{site.socialImage}")

		// Open Graph data
		meta(property="og:title", content="#{site.title}")
		meta(property="og:type", content="article")
		meta(property="og:url", content="#{site.url}")
		meta(property="og:image", content="#{site.socialImage}")
		meta(property="og:description", content="#{site.description}")
		meta(property="og:site_name", content="#{site.name}")

		block fonts
		block styles
		block head-scripts
	body
		block root
		block scripts